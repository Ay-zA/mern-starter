{
  "name": "mern-starter",
  "version": "1.0.0",
  "description": "MERN Starter with Webpack HMR and GraphQL",
  "main": "index.js",
  "scripts": {
    "preinstall": "rimraf ./node_modules",
    "install": "yarn",
    "clean": "rimraf ./build",
    "lint": "eslint app --ext .jsx,.js",
    "lint:server": "eslint app/server --ext .js,.jsx",
    "lint:client": "eslint app/client --ext .js,.jsx",
    "build:watch": "npm run clean && cross-env NODE_ENV=development webpack -d --watch",
    "build:dev": "npm run clean && cross-env NODE_ENV=development webpack --config webpack.config.dev.babel.js -d",
    "build:prod": "npm run clean && cross-env NODE_ENV=production webpack --config webpack.config.prod.babel.js -p",
    "server:dev": "cross-env NODE_ENV=dev node app/index.js --open",
    "server:prod": "cross-env NODE_ENV=prod node app/index.js",
    "start": "cross-env NODE_ENV=development && nodemon -q app/index.js --port 80",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/frontendmonster/mern-starter.git"
  },
  "keywords": [
    "MERN-starter",
    "MERN",
    "express",
    "mongo",
    "webpack",
    "hmr",
    "graphql",
    "react",
    "saga",
    "redux",
    "es7",
    "scss",
    "eslint",
    "jest",
    "api"
  ],
  "author": "S-Kill <frontendmonster@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/frontendmonster/mern-starter/issues"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "homepage": "https://github.com/frontendmonster/mern-starter#readme",
  "jest": {
    "rootDir": "./app/server/api/",
    "testEnvironment": "jest-environment-node",
    "collectCoverageFrom": [
      "*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  },
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.2",
    "celebrate": "^7.0.4",
    "chalk": "^2.3.0",
    "compression": "^1.7.1",
    "express": "^4.16.2",
    "express-graphql": "^0.6.11",
    "graphql": "^0.11.0",
    "helmet": "^3.9.0",
    "http-status": "^1.0.1",
    "jsonwebtoken": "^8.1.0",
    "mongoose": "^4.13.7",
    "morgan": "^1.9.0",
    "node-sass": "^4.7.2",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.1",
    "passport-local": "^1.0.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-immutable-state-invariant": "^2.1.0",
    "redux-saga": "^0.16.0",
    "serve-favicon": "^2.4.5",
    "slug": "^0.9.1",
    "styled-components": "^2.4.0",
    "winston": "^2.4.0",
    "yargs": "^10.0.3"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.3",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.1",
    "babel-jest": "^22.0.4",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.12",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "chokidar": "^1.7.0",
    "clear-it": "^1.0.0",
    "console-clear": "^1.0.0",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.7",
    "deep-freeze": "^0.0.1",
    "dotenv": "^4.0.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.5.1",
    "eslint": "^4.14.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "flow-bin": "^0.61.0",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^22.0.4",
    "nodemon": "^1.14.3",
    "opn": "^5.1.0",
    "parse-stack": "^0.1.4",
    "postcss-loader": "^2.0.9",
    "pretty-error": "^2.1.1",
    "prop-types": "^15.6.0",
    "react-hot-loader": "next",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "url-loader": "^0.6.2",
    "webpack-dev-middleware": "^2.0.3",
    "webpack-hot-middleware": "^2.21.0",
    "webpack": "^3.10.0"
  }
}
